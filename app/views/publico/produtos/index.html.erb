<h1>Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publico_produtos.each do |publico_produto| %>
      <tr>
        <td><%= publico_produto.nome %></td>
        <td><%= publico_produto.descricao %></td>
        <td><%= link_to 'Show', publico_produto %></td>
        <td><%= link_to 'Edit', edit_publico_produto_path(publico_produto) %></td>
        <td><%= link_to 'Destroy', publico_produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

